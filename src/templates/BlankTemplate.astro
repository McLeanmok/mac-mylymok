---
import GoogleTrackCode from '../components/GoogleTrackCode.astro';

interface Props {
    title: string,
    description?: string,
}

const {title ="New Page", description="This is my new page"} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<GoogleTrackCode />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
        <meta name="description"  content={description} />
        <link rel="stylesheet" href="/style/css/index.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main>
		<slot />
		</main>
	</body>
</html>
